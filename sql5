CREATE TABLE BOOKS (ISBN VARCHAR(20) PRIMARY KEY,Title VARCHAR(100),Author VARCHAR(50),Publisher VARCHAR(50));

CREATE TABLE STUDENT (StudentID integer PRIMARY KEY,Name VARCHAR(50),Gender VARCHAR(10),Address VARCHAR(100));

CREATE TABLE BORROWS (BorrowID integer PRIMARY KEY,StudentID integer,ISBN VARCHAR(20),FOREIGN KEY (StudentID) REFERENCES STUDENT(StudentID) ON DELETE CASCADE,FOREIGN KEY (ISBN) REFERENCES BOOKS(ISBN) ON DELETE CASCADE);

